<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="co.edu.uptc.view.CalculatorController">
    <HBox spacing="10" alignment="center">
        <Label text="Base Actual:"/>
        <ComboBox fx:id="baseComboBox" prefWidth="100"/>
        <Label text="Convertir a:"/>
        <ComboBox fx:id="convertToBaseComboBox" prefWidth="100"/>
        <Button text="Convertir" onAction="#handleBaseConversion"/>
    </HBox>
    <GridPane vgap="5" hgap="5">
        <padding>
            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
        </padding>
        <TextField fx:id="expressionField" GridPane.columnSpan="4"/>
        <Button text="7" onAction="#handleNumber" GridPane.rowIndex="1"/>
        <Button text="8" onAction="#handleNumber" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Button text="9" onAction="#handleNumber" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <Button text="/" onAction="#handleOperator" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
        <Button text="4" onAction="#handleNumber" GridPane.rowIndex="2"/>
        <Button text="5" onAction="#handleNumber" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        <Button text="6" onAction="#handleNumber" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
        <Button text="*" onAction="#handleOperator" GridPane.rowIndex="2" GridPane.columnIndex="3"/>
        <Button text="1" onAction="#handleNumber" GridPane.rowIndex="3"/>
        <Button text="2" onAction="#handleNumber" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        <Button text="3" onAction="#handleNumber" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
        <Button text="-" onAction="#handleOperator" GridPane.rowIndex="3" GridPane.columnIndex="3"/>
        <Button text="0" onAction="#handleNumber" GridPane.rowIndex="4"/>
        <Button text="." onAction="#handleNumber" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        <Button text="=" onAction="#handleEquals" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
        <Button text="+" onAction="#handleOperator" GridPane.rowIndex="4" GridPane.columnIndex="3"/>
    </GridPane>
</VBox>